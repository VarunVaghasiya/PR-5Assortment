#include<stdio.h>
 
int main(){
    int i, j, rows, columns, a[10][10], Sum;
    
    printf("Enter the array's row size  :  ");
    scanf("%d",&rows);
    
    printf("Enter the array's column size : ");
    scanf("%d",&columns);
    
    printf("Enter the array's Elements :\n");
    for(i = 0; i < rows; i++)
    {
        for(j = 0; j < columns; j++)
        {
            scanf("%d", &a[rows][columns]);
        }
    }
    
    for(i = 0; i < rows; i++)
    {
        Sum = 0;
        for(j = 0; j < columns; j++)
        {
            Sum = Sum + a[rows][columns];
        }
        printf("Enter row number : ");
        scanf("%d",&i);
        printf("Elements of row 0 : ");
        scanf("%d",&i);
        printf("The sum of row 0 :%d",Sum);
        
        printf("Enter column number : ");
        scanf("%d",&j);
        printf("Elements of column 2 : ");
        scanf("%d",&j);
        printf("The sum of column 2 :%d",Sum);
    
    }
    
    return 0;
}
